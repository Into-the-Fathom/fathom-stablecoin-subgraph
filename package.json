{
  "name": "fathomapp-subgraph",
  "license": "UNLICENSED",
  "scripts": {
    "codegen": "graph codegen",
    "build": "graph build",
    "deploy": "graph deploy --node https://api.studio.thegraph.com/deploy/ fathomapp-subgraph",

    "create-local": "graph create --node http://localhost:8020/ fathomapp-subgraph",
    "remove-local": "graph remove --node http://localhost:8020/ fathomapp-subgraph",
    "deploy-local": "graph deploy --node http://localhost:8020/ --ipfs http://localhost:5001 fathomapp-subgraph",

    "create-cloud": "graph create --node http://graph.composer.live fathomapp-subgraph",
    "remove-cloud": "graph remove --node http://graph.composer.live fathomapp-subgraph",
    "deploy-cloud": "graph deploy --node http://graph.composer.live --ipfs http://graph.composer.live:5001 fathomapp-subgraph",

    "create-test-cloud": "graph create --node http://159.223.112.169:8020/ fathomapp-subgraph",
    "remove-test-cloud": "graph remove --node http://159.223.112.169:8020/ fathomapp-subgraph",
    "deploy-test-cloud": "graph deploy --node http://159.223.112.169:8020/ --ipfs http://159.223.112.169:5001 fathomapp-subgraph",

    "test": "graph test",

    "clean": "rm -rf build/ generated/",
    
    "prepare:apothem": "mustache networks/apothem.json subgraph.template.yaml subgraph.apothem.yaml",
    "codegen:apothem": "graph codegen --output-dir generated subgraph.apothem.yaml",
    "build:apothem": "graph codegen --output-dir generated subgraph.apothem.yaml",

    "make:apothem": "yarn clean && yarn prepare:apothem && yarn codegen:apothem && yarn build:apothem",
    
    "create:apothem": "graph create --node http://localhost:8020/ fathomapp-subgraph subgraph.apothem.yaml",
    "remove:apothem": "graph remove --node http://localhost:8020/ fathomapp-subgraph subgraph.apothem.yaml",
    "deploy:apothem": "graph deploy --node http://localhost:8020/ --ipfs http://localhost:5001 --version-label v0.0.1 fathomapp-subgraph subgraph.apothem.yaml"
  },
  "dependencies": {
    "@graphprotocol/graph-cli": "0.35.0",
    "@graphprotocol/graph-ts": "0.28.1",
    "mustache": "^4.2.0"
  },
  "devDependencies": { "matchstick-as": "0.5.0" }
}
