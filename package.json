{
  "name": "fathomapp-subgraph",
  "license": "UNLICENSED",
  "scripts": {
    "clean": "rm -rf build/ generated/ config/addresses.ts config/generatedAddresses.json subgraph.yaml",
    "codegen": "graph codegen",
    "build": "graph build",
    "test": "graph test",

    "create-test-cloud": "graph create --node http://159.223.112.169:8020/ fathomapp-subgraph",
    "remove-test-cloud": "graph remove --node http://159.223.112.169:8020/ fathomapp-subgraph",
    "deploy-test-cloud": "graph deploy --node http://159.223.112.169:8020/ --ipfs http://159.223.112.169:5001 fathomapp-subgraph",

    "create:apothem:local": "graph create --node http://localhost:8020/ fathomapp-subgraph subgraph.yaml",
    "remove:apothem:local": "graph remove --node http://localhost:8020/ fathomapp-subgraph subgraph.yaml",
    "deploy:apothem:local": "graph deploy --node http://localhost:8020/ --ipfs http://localhost:5001 --version-label v0.0.1 fathomapp-subgraph subgraph.yaml",

    "prep:addresses:apothem": "ts-node config/apothemAddressScript.ts && mustache ./config/generatedAddresses.json ./config/addresses.template.ts > ./config/addresses.ts",
    "prep:apothem": "yarn prep:addresses:apothem && mustache ./config/generatedAddresses.json subgraph.template.yaml > subgraph.yaml && graph codegen && graph build"
    
  },
  "dependencies": {
    "@graphprotocol/graph-cli": "0.35.0",
    "@graphprotocol/graph-ts": "0.28.1"
  },
  "devDependencies": {
     "matchstick-as": "0.5.0",
     "mustache": "^4.2.0",
     "@types/node": "^14.0.13",
     "typescript": "^3.9.3"
  }
}
